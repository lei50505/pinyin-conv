<Window x:Class="PinYinConv.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PinYinConv" Height="350" Width="525" MinWidth="525" MinHeight="350" Icon="resources/C_Letter_128px_1121413_easyicon.net.ico">
    <Grid>
        <TextBox x:Name="TextBoxCh" Height="30" Margin="10,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" VerticalContentAlignment="Center"/>
        <ListBox x:Name="ListBoxAnswer" Margin="10,80,10,10"/>
        <Button x:Name="ButtonFirst" Content="首字母" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" Width="75"  Height="30" Click="ButtonFirst_Click"/>
        <Button x:Name="ButtonFull" Content="全拼" Margin="90,45,0,0" VerticalAlignment="Top"  Height="30" HorizontalAlignment="Left" Width="75" Click="ButtonFull_Click"/>

    </Grid>
</Window>
